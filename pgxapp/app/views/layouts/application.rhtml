<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <title>dbSNP Database</title>
	<meta name="keywords" content="pharmacogenomics,pharmacogenomic services,services pharmacogenomique,pharmacogenetics,genetic variation,drug,adverse effects,adverse reactions,drug therapy response,efficacy,toxicity,genotype,patients,service,DNA,isolation,Michael Phillips,genome,genomics,protein,proteome,proteomics,SNP,core facility,gene,McGill,universite de montreal,montreal heart institute,genome quebec,institut de cardiologie de montreal,innovation,genotyping,services,genotype,sequencing services,base,ADN,oligo,probe,marker,sequence,HapMap,haplotype,SNP,high throughput,Orchid,Illumina,PCR,experiment,design,research,polymorphism,primer,analysis,mass spectrometry,pharmaceuticals" />
    <%= stylesheet_link_tag "scaffold", :media => "all" %>
    <%= javascript_include_tag :defaults %>
    <script type="text/javascript"><%= @content_for_page_scripts %></script>
    <link rel="shortcut icon" type="image/ico" href="http://www.pharmacogenomics.ca/pgxstatic/icons/favicon.ico" >
  </head>
  <body>

    <!-- Start headerPGX -->
    <div id="headerPGX">
      <a name="top" />

		<div id="projectTitle">
			<h2>dbSNP Database</h2>
			<% if @session[:login] && user=User.find_by_login_name(session[:login]) %>
			<div title='Groupes: <%=@session[:groups].inspect%>'>
			Usager: <%=user.prenom_usager%> <%=user.nom_usager%> (<%=session[:login]%>)
			</div>
			<%end%>
		</div>

		<div id="projectLogos">
			<%= link_to(image_tag("pgx_logo_en.png", :border => 0, :alt => "Pharmacogenomics"),
				"http://www.pharmacogenomics.ca/pgx/",		:popup => true) %>
			<%= link_to(image_tag("logoGQ_small.gif", :border => 0, :alt => "Genome Quebec"),
				"http://www.genomequebec.com/",				:popup => true) %>
			<%= link_to(image_tag("logoGC_small.gif", :border => 0, :alt => "Genome Canada"),
				"http://www.genomecanada.ca/",				:popup => true) %>
			<%= link_to(image_tag("logoUL_small.gif", :border => 0, :alt => "UniversitÃ© Laval"),
				"http://www.ulaval.ca/", :popup => true) %>
		</div>

    </div>
    <!-- End headerPGX -->
	
 	<div id="framePGX">

    <!-- Start menuPGX -->
    <div id="menuPGX">
		<ul>
		<li class="dropdown" <%= @menu.eql?("gene") ? ' id="active"' : "" %> >
			<%= link_to "Search",						:controller => "gene",			:action => "index" %>
			<% if @menu.eql?("gene") %>
			<ul>
				<li><%= link_to "Family",				:controller => "gene",			:action => "list" -%></li>
				<li><%= link_to "Summary per Family",	:controller => "identified_gene",:action => "index" %></li>
				<li><%= link_to "Contigs",				:controller => "contig_list",	:action => "list" -%></li>
			</ul>
			<% end %>
		</li>
		<li class="dropdown" <%= @menu.eql?("primer") ? ' id="active"' : "" %> >
			<%= link_to "List",							:controller => "primer",		:action => "index" %>
			<% if @menu.eql?("primer") %>
			<ul>
				<li><%= link_to "SNPs",					:controller => "snp_admin",		:action => "edit" %></li>
				<li><%= link_to "SubSNPs",				:controller => "subsnp_admin",	:action => "edit" %></li>
				<li><%= link_to "Populations",			:controller => "population_admin",:action => "edit" %></li>
			</ul>
			<% end %>
		</li>
		<li class="dropdown" <%= @menu.eql?("primer") ? ' id="active"' : "" %> >
			<%= link_to "Edit",							:controller => "primer",		:action => "index" %>
			<% if @menu.eql?("primer") %>
			<ul>
				<li><%= link_to "SNPs",					:controller => "snp_admin",		:action => "list" %></li>
				<li><%= link_to "SubSNPs",				:controller => "subsnp_admin",	:action => "list" %></li>
				<li><%= link_to "Populations",			:controller => "population_admin",:action => "list" %></li>
			</ul>
			<% end %>
		</li>
		<li <%= @menu.eql?("summary") ? ' id="active"' : "" %> >
			<%= link_to "Summary",						:controller => "summary",		:action => "index" %>
		</li>
		<li>
			<%= link_to "Logout",						:controller => "login",			:action => "logout" %>
		</li>
		</ul>
	</div>
    <!-- End menuPGX -->

    <!-- Start content -->
    <div id="content"> 
      <% if @flash[:notice] -%>
        <div id="notice">
          <%= flash[:notice] %>
        </div>
        <br />
      <% end -%>
      <%= @content_for_layout %>
    </div>
    <!-- End content -->

 	</div>
	
    <!-- Start copyright -->
    <div id="copyright">
      <a href="#top">Top of page</a>
      <br />
      &copy; 2007 Quebec Genomics Centre. All rights reserved.
		<script src="http://www.google-analytics.com/urchin.js" type="text/javascript">
		</script>
    </div>
    <!-- End copyright -->

  </body>
</html>
